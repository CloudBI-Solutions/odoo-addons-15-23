<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="pos_config_settings_view_form" model="ir.ui.view">
        <field name="name">pos.config.inherit.view</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//div[@id='product_prices']"
                   position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                 <label for="discount_pos_cust"/>

                <div class="o_setting_right_pane">
                        <field name="discount_pos_cust" widget="radio"/>
                   </div>
                </div>

            </xpath>
        </field>
    </record>
</odoo>